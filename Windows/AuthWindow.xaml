<Window x:Class="program_for_school_tests_ukr.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program_for_school_tests_ukr.Windows"
        mc:Ignorable="d"
        Title="Вхід" Width="200">
    <Grid>
        <StackPanel Margin="10">
            <Label Target="{Binding ElementName=login}">Логін:</Label>
            <TextBox Name="login"></TextBox>
            <Label Target="{Binding ElementName=password}">Пароль:</Label>
            <TextBox Name="password"></TextBox>
            <Button Margin="10">Ok</Button>
        </StackPanel>
    </Grid>
</Window>
