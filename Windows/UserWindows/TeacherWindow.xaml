<Window x:Class="program_for_school_tests_ukr.Windows.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program_for_school_tests_ukr.Windows"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel>
                <Button>Тренувальні тести</Button>
                <Button>Контрольні тести</Button>
                <Button>Ваші тести</Button>
            </StackPanel>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right">Вийти</Button>
        </DockPanel>
        <Label VerticalAlignment="Bottom" HorizontalAlignment="Right">Ласкаво просимо "ім'я"</Label>
    </Grid>
</Window>
