<UserControl x:Class="program_for_school_tests_ukr.Windows.UserWindows.TeacherWindows.RedactTestWindows.UserControlls.AnswerAsTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:program_for_school_tests_ukr.Windows.UserWindows.TeacherWindows.RedactTestWindows.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Initialized="UserControl_Initialized">
    <RadioButton VerticalContentAlignment="Center" x:Name="radioButton" GroupName="Answers" Checked="RadioButton_Checked">
        <WrapPanel> 
            <TextBox Margin="2, 0, 10, 0" Width="200" Height="50" Text="{Binding Text, Mode=TwoWay}"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button VerticalAlignment="Center" Click="DeleteThisAnswer_Click">Видалити</Button>
        </WrapPanel>
    </RadioButton> 
</UserControl>
