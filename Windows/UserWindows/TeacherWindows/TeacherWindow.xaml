<Window x:Class="program_for_school_tests_ukr.Windows.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program_for_school_tests_ukr.Windows"
        xmlns:users="clr-namespace:program_for_school_tests_ukr.Classes.Users"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid>
        <DockPanel>
            <StackPanel>
                <Button Click="ShowAllMarks_Button_Click">Переглянути оцінки</Button>
                <Button Click="YourTests_Button_Click">Ваші тести</Button>
            </StackPanel>
            <Button VerticalAlignment="Top" HorizontalAlignment="Right" Click="ExitButton_Click">Вийти</Button>
        </DockPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Label Padding="0, 2" Content="Ласкаво просимо "/>
            <Label Padding="0, 2, 5, 0" Content="{Binding Path=FullName}"/>
        </StackPanel>
    </Grid>
</Window>
